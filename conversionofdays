/*Write a C++ Program to Convert Days Into Years Weeks and Days. 
Hereâ€™s simple Program to Convert Days Into Years Weeks and Days in C++ Programming Language.
*/
#include <iostream>

using namespace std;

int main()
{
    int y,d,w;
    cout<<"Enter No. of days :: ";
    cin>>d;

    y=d/365;
    d=d%365;
    w=d/7;
    d=d%7;

    cout<<"No of years = "<<y<<endl;
    cout<<"No of weeks = "<<w<<endl;
    cout<<"No of days = "<<d<<endl;

    return 0;
}
 


    
