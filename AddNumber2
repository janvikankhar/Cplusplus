#include <iostream>

using namespace std;

int main()
{
    int a,b,c;
    cout<<"Enter first number :: ";
    cin>>a;
    cout<<"Enter first number :: ";
    cin>>b;
    c=a+b;
    cout<<"The Sum of two numbers  ["<<"a"<<"+"<<"b] = "<<c<<endl;
    return 0;
}
