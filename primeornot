#include<iostream>
using namespace std;

int main()
{
    int no, i;
    cout<<"Enter a number to be checked : ";
    cin>>no;
    for(i=0;i<no;i++)
    {
        if(no%i==0)
        {
            break;
        }
    }
    if(no==i)
    {
        cout<<"\n"<<no<<" is a prime number";
    }
    else
    {
        cout<<"\n"<<no<<" is not a prime number";
    }
}
